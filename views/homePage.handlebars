<body>
<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>


{{#each posts as |post| }}
<div class="row w-100">
<div class="card border-info mb-3" style="max-width: 70rem;">
    
        <div class="card-header d-flex justify-content-between py-1">
            <a href="post/{{post.id}}"><h3>{{post.title}}</h3>
    </a>
     {{ post.user.username}} Created: {{format_date post.date_created}} </a>
</div>

<div class="card-body">
    <h4 class="card-title"></h4>
    <p class="card-text"> {{post.content}} </p>
</div>

{{#if post.comments }}
<div class="comments mx-2">
<table class="table table-primary mb-2">
   <th scope="row mb-0">
   <h4 class="mb-0">Comments</h4></th>
    </table>
   <div class= "comment">
    <table class="table ">
      
        {{#each comments as |comment| }}

    <tr>
        <td> &ndash; {{ user.username }} {{format_date post.date_created}} </td> <td>{{comment.comment}}</td>

    </tr>
    </div>
    {{/each}}
    </table>


{{/if}}
</div>
</div>
</div>
</div>
{{/each}}

</body>