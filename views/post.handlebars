<div class="d-flex flex-column m-5 p-4">
<div class="card border-info mb-2 mx-2 ">

        <div class="card-header d-flex justify-content-between  py-1">
          <div class="d-flex"> <h4>{{title}} </h4> </div>


                

</div>
<div class="card-body  post">

    <p class="card-text"> {{content}} </p>
  
    <div class="comments ">
        <table class="table table-primary mb-2">
            <th scope="row mb-0">
                <h4 class="mb-0">Comments</h4>
            </th>
        </table>
        <div class="comment">
            <table class="table ">
    
                {{#each comments as |comment| }}
    
                <tr>
                    <td> &ndash; {{ user.username }} </td>
                    <td>{{comment.comment}}</td>
    
                </tr>
        </div>
        {{/each}}
        </table>
    
    
       
            <form id="addComment" class="form mb-2">
                    <input type="hidden" name="post-id" value="{{id}}" />
                <div class="form-group">
                    <label for="post-comment">Comment</label>
                    <textarea class="form-input form-control" placeholder="Enter post comment" id="post-comment"
                        name="post-comment"></textarea>
                </div>
                <div class="text-center">
                    <button id="btn-submit " type="submit" class="btn btn-sm btn-info">Submit</button>
                </div>
            </form>

</div>

  
        
</div>
        <div class="card-footer d-flex flex-row justify-content-around">
            <div class="d-flex" data-id="{{id}}"> <button class="btn  btn-danger " data-id="{{id}}">DELETE</button>
            </div>
            <div class="d-flex">
                <button class="btn  btn-warning " data-toggle="modal" data-target="#editmodal" data-id="{{id}}">EDIT</button>
            </div>
        </div>
    <div class="modal" id="editmodal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="EditPost">Add New Post</h5>
            </div>

            <form data-id="{{id}}" class="form mb-2 edit-post-form">
                <div class="modal-body">
                    <div class="row mt-1">
                        <div class="form-group ">
                            <label for="post-title">Title </label>
                            <input class="form-input form-control mb-3" type="text" id="post-title" name="post-title"
                                value="{{title}}">
                        </div>
                        <div class="form-group">
                            <label for="post-content">Description</label>

                            <textarea class="form-control form-input mb-3 post-content" id="post-content"
                                name="post-content" rows="3" value="{{content}}"> {{content}} </textarea>

                        </div>
                            <button type="submit" id="btn-submit" class="btn btn-primary">Save Post</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>

                    </div>


                </div>


            </form>
        </div>
    </div>
</div>
</div>
    <script src="/js/comment.js"></script>
    <script src="/js/post.js"></script>
            <script src="/js/profile.js"></script>